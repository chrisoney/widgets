extends ../layout

append head
  link(rel="stylesheet" href="/stylesheets/discover.css")
  //- add page specific js
  script(src="/javascripts/discover.js" type="module" defer)

block content
  div(class="main-container")
    h1=title
    div(class="secondary-container")
      div(class="discover-container")
        div(class="discover-nav")
          span(class="nav-item active") Stories
          span(class="nav-item") Users
          span(class="nav-item") Follows
        div(class="tab-content")
          ul
            each story in stories
              li(class="story-container")
                a(href=story.link class="story-title")=story.title
      include nav-section
      