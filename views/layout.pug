doctype html
html
  head
      block head
        title="Widgets"
        link(rel='stylesheet' href='/stylesheets/reset.css')
        link(rel='stylesheet' href='/stylesheets/nav.css')
        script(src="https://kit.fontawesome.com/a229c5b13d.js" crossorigin="anonymous")
  body
    nav(class="top-nav")
      span(class="fas fa-cogs widget-icon")
      if locals.authenticated
        form(class='form-inline pr-4' action='/users/logout' method='post')
          input(class='logout-button' type='submit' value='Logout')
      else
        span(class='navbar-text px-4')
          a(class='login-button' href='/users/login') Login
          a(class='register-button' href='/users/register') Register

    block content